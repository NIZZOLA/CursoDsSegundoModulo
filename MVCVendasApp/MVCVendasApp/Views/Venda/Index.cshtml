@model IEnumerable<MVCVendasApp.Models.VendaModel>

@{
    ViewData["Title"] = "Listagem de Vendas";
}

<h1>Listagem de Vendas</h1>

<p>
    <a asp-action="Create" class="fa fa-plus-square">Criar venda</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataDaVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPrevistaDaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoDoRastreamento)
            </th>
            <th>
                Total R$
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var venda in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => venda.DataDaVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => venda.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => venda.DataPrevistaDaEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => venda.CodigoDoRastreamento)
            </td>
            <td>
                @(  venda.Itens.Sum(a => a.Quantidade * a.ValorDeVenda).ToString("###,##0.00") )
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@venda.VendaId" title="Detalhes"><i class="fa fa-list"></i></a> |
                <a asp-action="Edit" asp-route-id="@venda.VendaId" title="Editar"><i class="fa fa-edit"></i></a> |
                <a asp-action="Delete" asp-route-id="@venda.VendaId" title="Excluir"><i class="fa fa-trash-o"></i></a> |
                <a asp-action="Print" asp-route-id="@venda.VendaId" alt="Imprimir" title="Imprimir" target="_blank"><i class="fa fa-print"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
